  "license": "Apache-2.0",
  "repository": {
    "type": ".git",
    "url": "https://github.com/product-os/dreamsheets-scripts.git"
  },
  "engines": {
    "npm": ">=8.1.2",
    "node": ">=16.13.1"
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "config/",
    "bin/",
    "template/",
    "dist/"
  ],
  "keywords": [
    "google sheets",
    "gsheets",
    "google app script"
  ],
  "bin": {
    "dreamsheets-scripts": "./bin/main.mjs",
    "dsx": "./bin/main.mjs"
  },
  "scripts": {
    "start": "rimraf example.ignore && npm exec --yes --package=\"dreamsheets-scripts@file:.\" -- dsx init example.ignore --package-version=\"file:..\"",
    "prepare": "husky install",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build-watch": "npm run --silent build -- --watch",
    "lint": "balena-lint lib",
    "lint-fix": "npm run lint -- --fix",
    "specs": "npm run --silent build && mocha",
    "try": "npm run --silent lint-fix && npm run --silent specs && npm run --silent start",
    "test": "npm run lint && npm run specs",
    "prepack": "npm test"
  },
  "dependencies": {
    "@google/clasp": "^2.4.1",
    "dotenv": "^16.0.1",
    "gas-webpack-plugin": "^2.2.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.9",
    "webpack": "^5.72.0",
    "yargs": "^17.4.1",
    "zx": "6.2.5"
  },
  "devDependencies": {
    "@balena/lint": "^8.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/google-apps-script": "^1.0.47",
    "@types/jest": "^27.4.1",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "version": "0.7.2",
  "versionist": {
    "publishedAt": "2024-04-08T18:56:53.176Z"
  }
}
