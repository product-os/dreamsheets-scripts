{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "lib",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": false,
		"strict": true,
		"target": "ESNext",
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"lib": [ "esnext" ],
		"experimentalDecorators": true
	},
	// "exclude": ["node_modules"],
	"ts-node": {
		"files": true
	},
	"include": [
		"lib/**/*.mts",
		"lib/**/*.ts"
	]
}
